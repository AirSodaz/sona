{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sona",
  "version": "0.1.3",
  "identifier": "com.asoda.sona",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Sona - Transcript Editor",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "dmg": {
        "windowPosition": {
          "x": 400,
          "y": 400
        },
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        }
      }
    },
    "externalBin": [
      "binaries/node"
    ],
    "resources": [
      "sidecar/dist/*"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "RWQWTssWjQlASNW+qfGkr/9mxL6TjYvaXAMZlukLT1R3KvaJF5mUQgRT",
      "endpoints": [
        "https://github.com/AirSodaz/sona/releases/latest/download/updater.json"
      ]
    }
  }
}